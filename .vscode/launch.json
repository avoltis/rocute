{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "brightscript",
            "request": "launch",
            "name": "BrightScript Debug: Launch",
            "stopOnEntry": false,
            "host": "${input:rokuHost}",
            "password": "${input:rokuPassword}",
            "rootDir": "${workspaceFolder}/.ukor",
            "sourceDirs": [
                "${workspaceFolder}/src/main",
            ],
            "files": [
                "manifest",
                "source/**/*.*",
                "components/**/*.*",
                "images/**/*.*",
                "locale/**/*.*"
            ],
            "enableDebuggerAutoRecovery": false,
            "stopDebuggerOnAppExit": false,
            "preLaunchTask": "ukorMake",
        },
        {
            "type": "brightscript",
            "request": "launch",
            "name": "BouncingLogoScreensaver",
            "stopOnEntry": false,
            "host": "${input:rokuHost}",
            "password": "${input:rokuPassword}",
            "rootDir": "${workspaceFolder}/.ukor",
            "sourceDirs": [
                "${workspaceFolder}/src/main",
            ],
            "files": [
                "manifest",
                "source/**/*.*",
                "components/**/*.*",
                "images/**/*.*",
                "locale/**/*.*"
            ],
            "enableDebuggerAutoRecovery": false,
            "stopDebuggerOnAppExit": false,
            "preLaunchTask": "ukorMakeBouncingLogoScreensaver",
        },
        {
            "type": "brightscript",
            "request": "launch",
            "name": "ExpandingLogoScreensaver",
            "stopOnEntry": false,
            "host": "${input:rokuHost}",
            "password": "${input:rokuPassword}",
            "rootDir": "${workspaceFolder}/.ukor",
            "sourceDirs": [
                "${workspaceFolder}/src/main",
            ],
            "files": [
                "manifest",
                "source/**/*.*",
                "components/**/*.*",
                "images/**/*.*",
                "locale/**/*.*"
            ],
            "enableDebuggerAutoRecovery": false,
            "stopDebuggerOnAppExit": false,
            "preLaunchTask": "ukorMakeExpandingLogoScreensaver",
        },
        {
            "type": "brightscript",
            "request": "launch",
            "name": "Test",
            "stopOnEntry": false,
            "host": "${input:rokuHost}",
            "password": "${input:rokuPassword}",
            "rootDir": "${workspaceFolder}/.ukor",
            "sourceDirs": [
                "${workspaceFolder}/.ukor",
            ],
            "files": [
                "manifest",
                "source/**/*.*",
                "components/**/*.*",
                "images/**/*.*",
                "locale/**/*.*"
            ],
            "enableDebuggerAutoRecovery": false,
            "stopDebuggerOnAppExit": false,
            "preLaunchTask": "ukorMakeTests",
        },
    ],
    "inputs":[
        {
            "id": "rokuHost",
            "type": "promptString",
            "default": "192.168.0.0",
            "description": "Host IP Address"
        },
        {
            "id": "rokuPassword",
            "type": "promptString",
            "default": "password",
            "description": "Password"
        }
    ]
}